includeConfig 'configs/mixcr_analyze.config'
includeConfig 'configs/mixcr_exportClones.config'
includeConfig 'configs/mixcr_exportQc_align.config'
includeConfig 'configs/mixcr_exportQc_chainUsage.config'
includeConfig 'configs/mixcr_exportQc_coverage.config'
includeConfig 'configs/mixcr_exportReports.config'

params.library = 'assets/NO_FILE'
params.study   = 'TCR'
params.outdir  = 'results'

docker.registry      = 'quay.io'
singularity.registry = 'quay.io'

profiles {
    docker {
        docker.enabled         = true
        docker.userEmulation   = true
        conda.enabled          = false
        singularity.enabled    = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        apptainer.enabled      = false
    }
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        conda.enabled          = false
        docker.enabled         = false
        podman.enabled         = false
        shifter.enabled        = false
        charliecloud.enabled   = false
        apptainer.enabled      = false
    }
    test { includeConfig 'configs/test.config' }
}
